                                    "application/pdf"
                                ],
                                "maxSize": 5242880
                            },
                            "validationRules": [],
                            "dependencies": [
                                {
                                    "field": "birthDocType",
                                    "condition": "equals",
                                    "value": "affidavit",
                                    "behavior": "hide"
                                }
                            ]
                        },
                        {
                            "fieldId": "bornAbroad",
