                        },
                        {
                            "$ref": "#/commonFields/receiptUpload"
                        },
                        {
                            "$ref": "#/commonFields/declaration"
                        },
                        {
                            "$ref": "#/commonFields/signature"
                        },
                        {
                            "$ref": "#/commonFields/declarationDate"
                        }
                    ]
